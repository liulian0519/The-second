<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>首页</title>
    <style type="text/css">
        table,tr,td{
            border:1px solid #cccccc;
        }
        td{
            padding:10px;
            width:100px;
        }
    </style>
</head>
<body>
<a href="/add" style="text-decoration: none" target="_blank">【添加学生】 </a>
    <table>
        <tr>
            <td>姓名</td>
            <td>年龄</td>
            <td>性别</td>
            <td>操作</td>
        </tr>
        <%for(var i =0 ;i<students.length;i++){%>
            <tr>
                <td><%=students[i].name%></td>
                <td><%=students[i].age%></td>
                <td><%=students[i].sex%></td>
                <td><a href="/edit/<%=students[i].sid%>" style="text-decoration: none">修改</a></td>
            </tr>
        <%}%>
    </table>
</body>
</html>